# Deep Sci-Fi Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# IMPORTANT: Never commit terraform.tfvars to version control

# ============================================================================
# Project Configuration
# ============================================================================
project_name = "deep-sci-fi"
environment  = "prod"
aws_region   = "us-east-1"

# ============================================================================
# Database Configuration
# ============================================================================
# Strong password for PostgreSQL (min 8 chars, include letters and numbers)
db_password = "CHANGE_ME_strong_password_123"

# Instance size (db.t3.micro for dev, db.t3.small or larger for production)
db_instance_class = "db.t3.micro"

# ============================================================================
# API Keys (Required)
# ============================================================================
# Get from: https://console.anthropic.com/
anthropic_api_key = "sk-ant-api..."

# ============================================================================
# API Keys (Optional - leave empty if not using)
# ============================================================================
# Get from: https://platform.openai.com/api-keys
openai_api_key = ""

# Get from: https://console.cloud.google.com/apis/credentials
google_api_key = ""

# ============================================================================
# ECS Configuration
# ============================================================================
# CPU units (256 = 0.25 vCPU, 512 = 0.5 vCPU, 1024 = 1 vCPU)
ecs_cpu = 1024

# Memory in MB (must be compatible with CPU - see AWS docs)
ecs_memory = 2048

# Number of tasks to run (1 for dev, 2+ for production with high availability)
ecs_desired_count = 1
